@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<form>

    @for (var i = 0; i < @Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].Id"/>
            <input type="hidden" asp-for="@Model[i].Name"/>
            <input type="checkbox" asp-for="@Model[i].exist" class="form-check-input"/>
            <label class="form-check-label" asp-for="@Model[i].exist">@Model[i].Name</label>
        </div>
    } 
<button class="btn btn-info">Değişiklikleri Kaydet</button>             
</form>

<a href="/admin/adminrole/userrolelist" class="btn btn-info">Kullanıcı Rol Listesi</a>