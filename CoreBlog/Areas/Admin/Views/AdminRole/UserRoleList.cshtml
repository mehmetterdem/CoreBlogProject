@using EntityLayer.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "UserRoleList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kullanıcı Rol Listesi</h1>

<table class="table table-bordered">
   <tr>
       <th>Kullanıcı</th>
       <th>Rol Ata</th>
   </tr>
   @foreach (var item in Model)
  {
      <tr>
          <td>@item.NameSurname</td>
          <td><a href="/admin/adminrole/assignrole/@item.Id" class="btn btn-outline-danger">Rol Ata</a></td>
      </tr>
  }

</table>
<a href="/admin/adminrole/index" class="btn btn-info">Rol Listesine Dön</a>

